<% provide(:title, "Landlord Signup")%>

<h1>Sign up as a landlord</h1>

<div class="row">
  <div class="span6 offset3">
	<%= form_for @landlord do |f| %>
	
		<%= render 'shared/landlord_error_messages' %>
	
		<%= f.label :name %>
		<%= f.text_field :name %>
	
		<%= f.label :email %>
		<%= f.text_field :email %>
	
		<%= f.file_field :image %>
	
		<%= f.label :password %>
		<%= f.password_field :password %>
	
		<%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation %>
	
		<%= f.submit class: "btn btn-large btn-primary" %>
	
	<%end%>
	</div>
</div>	